<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--把对象的创建交给spring来管理-->
    <!--spring对bean的管理细节-->
    <!--第一种 使用默认构造函数创建-->
        <bean id="accountService" class="com.lingjian.service.impl.AccountServiceImpl">
            <constructor-arg name="name" value="凌健"></constructor-arg>
            <constructor-arg name="age" value="27"></constructor-arg>
            <constructor-arg name="birthday" ref="now" ></constructor-arg>
        </bean>

        <bean id="now" class="java.util.Date"></bean>

    <bean id="accountService2" class="com.lingjian.service.impl.AccountServiceImpl2">
        <property name="name" value="徐小萌"></property>
        <property name="age" value="26"></property>
        <property name="birthday" ref="now"></property>
    </bean>

    <bean id="accountService3" class="com.lingjian.service.impl.AccountServiceImpl3">
        <property name="myStrs">
            <array>
                <value>AAA</value>
                <value>BBB</value>
                <value>CCC</value>
            </array>
        </property>

        <property name="list">
            <list>
                <value>AAA</value>
                <value>BBB</value>
                <value>CCC</value>
            </list>
        </property>

        <property name="set">
            <set>
                <value>AAA</value>
                <value>BBB</value>
                <value>CCC</value>
            </set>
        </property>

        <property name="map">
            <map>
                <entry key="testA">
                    <value>AAA</value>
                </entry>
                <entry key="testB" value="BBB"></entry>
            </map>
        </property>

        <property name="props">
            <props>
                <prop key="testC">CCC</prop>
                <prop key="testD">DDD</prop>
            </props>
        </property>
    </bean>



</beans>