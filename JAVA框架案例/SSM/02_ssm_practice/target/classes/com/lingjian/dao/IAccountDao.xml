<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lingjian.dao.IAccountDao">

    <!--配置查询所有-->
    <select id="findAll" resultType="com.lingjian.domain.Account">
        select  * from account
    </select>

    <!--保存账户-->
    <insert id="saveAccount" parameterType="com.lingjian.domain.Account">
        insert into account(name,money) values(#{name},#{money});
    </insert>
</mapper>